{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["es2017", "dom"]
  },
  "compileOnSave": true,
  // nullチェックを有効にする
  "strictNullChecks": true,
  "include": ["src", "node_modules/@types/jest"],
  "exclude": ["**/*.spec.ts"]
}
